{
  "manifest_version": 3,
  "name": "FeedMeJD",
  "version": "0.1.0",
  "description": "Your AI pet career assistant. Feed it job descriptions to analyze skill trends.",
  "permissions": [
    "storage",
    "scripting",
    "ai",
    "tabs"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*.png", "images/*.gif"],
      "matches": ["<all_urls>"]
    }
  ]
}
